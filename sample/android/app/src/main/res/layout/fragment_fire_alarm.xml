<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                android:background="#DD000000"
                android:layout_height="match_parent">

    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" tools:ignore="UselessParent">

        <TextView
                android:id="@+id/alarmMessageTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="150dp"
                android:text="@string/app_name"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textStyle="bold"/>

        <TextView
                android:id="@+id/alarmTimeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/alarmMessageTextView"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:text="@string/ringtone_alarm_tittle"
                android:textColor="@android:color/white"
                android:textSize="30sp"/>

        <LinearLayout
                android:id="@+id/openAppTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/closeAlarmTextView"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="22dp"
                android:gravity="center"
                android:orientation="horizontal">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text="@string/open_application_button"
                    android:textColor="#a1cd26"
                    android:textSize="18sp"/>
        </LinearLayout>

        <LinearLayout
                android:id="@+id/closeAlarmTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="26dp"
                android:gravity="center_horizontal|center"
                android:orientation="horizontal">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text="@string/close_button"
                    android:textColor="#f22834"
                    android:textSize="18sp"
                    android:textStyle="bold"/>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>