<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
    <android.support.constraint.ConstraintLayout android:layout_gravity="fill" android:id="@+id/toolbar"
                                                 android:layout_width="fill_parent"
                                                 android:layout_height="?actionBarSize"
                                                 app:layout_constraintStart_toStartOf="parent" style="@style/Toolbar">
        <RelativeLayout android:id="@+id/group_create_manager" android:layout_width="fill_parent"
                        android:layout_height="fill_parent" app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent">
            <include android:id="@+id/action_back" android:layout_width="wrap_content"
                     android:layout_height="wrap_content" android:layout_alignParentLeft="true"
                     android:layout_alignParentTop="true" android:layout_alignParentBottom="true"
                     layout="@layout/toolbar_button_back"/>
            <TextView android:id="@+id/toolbar_text" android:layout_width="wrap_content"
                      android:layout_height="wrap_content" android:text="@string/information_title"
                      android:layout_centerHorizontal="true" android:layout_centerVertical="true"
                      style="@style/toolbar_not_caps_text"/>
            <include android:id="@+id/action_ok" android:visibility="gone" android:layout_width="wrap_content"
                     android:layout_height="wrap_content" android:layout_alignParentTop="true"
                     android:layout_alignParentRight="true" android:layout_alignParentBottom="true"
                     layout="@layout/toolbar_button_done"/>
        </RelativeLayout>
    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout android:layout_gravity="fill" android:id="@+id/main_frame"
                                                 android:layout_width="fill_parent" android:layout_height="fill_parent"
                                                 android:layout_below="@id/toolbar">
        <ScrollView android:layout_width="fill_parent" android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">
            <LinearLayout android:orientation="vertical" android:layout_width="fill_parent"
                          android:layout_height="wrap_content" style="@style/Screen">
                <ImageView android:layout_gravity="center_horizontal" android:id="@+id/group_icon"
                           android:clickable="true" android:layout_width="@dimen/avatar_icon_size_156"
                           android:layout_height="@dimen/avatar_icon_size_156" app:srcCompat="@drawable/ic_nophoto"/>
                <TextView android:id="@+id/group_name_info_hint" android:layout_width="wrap_content"
                          android:layout_height="wrap_content" android:layout_marginTop="@dimen/menu_margin_32"
                          android:text="@string/group_title" style="@style/contact_info_hint"/>
                <EditText android:id="@+id/group_name" android:layout_width="fill_parent"
                          android:layout_height="wrap_content" android:maxLines="1" android:maxLength="35"
                          android:inputType="text" android:imeOptions="actionDone|flagNoExtractUi"
                          style="@style/EditText.Fragments"/>
                <TextView android:id="@+id/group_description_info_hint" android:layout_width="wrap_content"
                          android:layout_height="wrap_content" android:text="@string/group_description"
                          style="@style/contact_info_hint"/>
                <EditText android:id="@+id/group_description" android:scrollbars="vertical"
                          android:layout_width="fill_parent" android:layout_height="wrap_content" android:maxLines="4"
                          android:inputType="textMultiLine" android:imeOptions="flagNoExtractUi"
                          style="@style/EditText.Fragments"/>
                <RelativeLayout android:layout_width="fill_parent" android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/menu_margin_16" android:weightSum="100.0">
                    <android.support.v7.widget.AppCompatTextView android:layout_width="wrap_content"
                                                                 android:layout_height="wrap_content"
                                                                 android:text="@string/notifications"
                                                                 android:layout_centerVertical="true"
                                                                 style="@style/TitleText"/>
                    <android.support.v7.widget.SwitchCompat android:id="@+id/switch_group_notification"
                                                            android:layout_width="wrap_content"
                                                            android:layout_height="wrap_content" android:checked="true"
                                                            android:layout_alignParentRight="true"
                                                            android:layout_centerVertical="true"
                                                            style="@style/SwitchCyclops"/>
                </RelativeLayout>
                <LinearLayout android:orientation="horizontal" android:id="@+id/mute_notification_2_hours"
                              android:visibility="gone" android:layout_width="fill_parent"
                              android:layout_height="wrap_content" style="@style/SubTitle.Clicked">
                    <ImageView android:layout_gravity="center_vertical" android:layout_width="wrap_content"
                               android:layout_height="wrap_content" app:srcCompat="@drawable/ic_clock_2_hours"/>
                    <android.support.v7.widget.AppCompatTextView android:layout_gravity="center_vertical"
                                                                 android:layout_width="wrap_content"
                                                                 android:layout_height="wrap_content"
                                                                 android:text="@string/notification_mute_2_hours"
                                                                 style="@style/SubTitleText.BigMargin"/>
                </LinearLayout>
                <LinearLayout android:orientation="horizontal" android:id="@+id/mute_notification_6_hours"
                              android:visibility="gone" android:layout_width="fill_parent"
                              android:layout_height="wrap_content" style="@style/SubTitle.Clicked">
                    <ImageView android:layout_gravity="center_vertical" android:layout_width="wrap_content"
                               android:layout_height="wrap_content" app:srcCompat="@drawable/ic_clock_6_hours"/>
                    <android.support.v7.widget.AppCompatTextView android:layout_gravity="center_vertical"
                                                                 android:layout_width="wrap_content"
                                                                 android:layout_height="wrap_content"
                                                                 android:text="@string/notification_mute_6_hours"
                                                                 style="@style/SubTitleText.BigMargin"/>
                </LinearLayout>
                <LinearLayout android:orientation="horizontal" android:id="@+id/mute_notification_1_day"
                              android:visibility="gone" android:layout_width="fill_parent"
                              android:layout_height="wrap_content" style="@style/SubTitle.Clicked">
                    <ImageView android:layout_gravity="center_vertical" android:layout_width="wrap_content"
                               android:layout_height="wrap_content" app:srcCompat="@drawable/ic_clock_1_day"/>
                    <android.support.v7.widget.AppCompatTextView android:layout_gravity="center_vertical"
                                                                 android:layout_width="wrap_content"
                                                                 android:layout_height="wrap_content"
                                                                 android:text="@string/notification_mute_1_day"
                                                                 style="@style/SubTitleText.BigMargin"/>
                </LinearLayout>
                <RelativeLayout android:layout_width="fill_parent" android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/menu_margin_16"
                                android:layout_marginBottom="@dimen/menu_margin_32" android:weightSum="100.0">
                    <android.support.v7.widget.AppCompatTextView android:layout_width="wrap_content"
                                                                 android:layout_height="wrap_content"
                                                                 android:text="@string/action_pin_top"
                                                                 android:layout_centerVertical="true"
                                                                 style="@style/TitleText"/>
                    <android.support.v7.widget.SwitchCompat android:id="@+id/switch_pin"
                                                            android:layout_width="wrap_content"
                                                            android:layout_height="wrap_content" android:checked="true"
                                                            android:layout_alignParentRight="true"
                                                            android:layout_centerVertical="true"
                                                            style="@style/SwitchCyclops"/>
                </RelativeLayout>
                <include android:layout_width="fill_parent" android:layout_height="wrap_content"
                         layout="@layout/panel_group_members"/>
                <LinearLayout android:orientation="vertical" android:layout_width="fill_parent"
                              android:layout_height="wrap_content" android:layout_marginTop="@dimen/menu_margin_32">
                    <android.support.v7.widget.AppCompatTextView android:layout_width="wrap_content"
                                                                 android:layout_height="wrap_content"
                                                                 android:text="@string/options"
                                                                 style="@style/TitleText"/>
                    <LinearLayout android:orientation="horizontal" android:id="@+id/group_clear_chat_history"
                                  android:layout_width="fill_parent" android:layout_height="wrap_content"
                                  style="@style/SubTitle.Clicked">
                        <ImageView android:layout_gravity="center_vertical" android:layout_width="wrap_content"
                                   android:layout_height="wrap_content" app:srcCompat="@drawable/ic_broom"/>
                        <android.support.v7.widget.AppCompatTextView android:layout_gravity="center_vertical"
                                                                     android:layout_width="wrap_content"
                                                                     android:layout_height="wrap_content"
                                                                     android:text="@string/contact_clear_chat_history"
                                                                     style="@style/SubTitleText.BigMargin"/>
                    </LinearLayout>
                    <LinearLayout android:orientation="horizontal" android:id="@+id/group_exit"
                                  android:layout_width="fill_parent" android:layout_height="wrap_content"
                                  style="@style/SubTitle.Clicked">
                        <ImageView android:layout_gravity="center_vertical" android:layout_width="wrap_content"
                                   android:layout_height="wrap_content" app:srcCompat="@drawable/ic_exit"/>
                        <android.support.v7.widget.AppCompatTextView android:layout_gravity="center_vertical"
                                                                     android:layout_width="wrap_content"
                                                                     android:layout_height="wrap_content"
                                                                     android:text="@string/group_action_leave"
                                                                     style="@style/SubTitleText.BigMargin"/>
                    </LinearLayout>
                    <LinearLayout android:orientation="horizontal" android:id="@+id/group_delete"
                                  android:visibility="gone" android:layout_width="fill_parent"
                                  android:layout_height="wrap_content" style="@style/SubTitle.Clicked">
                        <ImageView android:layout_gravity="center_vertical" android:layout_width="wrap_content"
                                   android:layout_height="wrap_content" app:srcCompat="@drawable/ic_garbage_big"/>
                        <android.support.v7.widget.AppCompatTextView android:layout_gravity="center_vertical"
                                                                     android:layout_width="wrap_content"
                                                                     android:layout_height="wrap_content"
                                                                     android:text="@string/group_delete"
                                                                     style="@style/SubTitleText.BigMargin"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </android.support.constraint.ConstraintLayout>
</RelativeLayout>