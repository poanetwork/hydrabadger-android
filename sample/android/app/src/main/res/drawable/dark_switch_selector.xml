<?xml version="1.0" encoding="utf-8"?>
<selector
        xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:dither="true" android:visible="true" android:shape="rectangle" android:useLevel="false">
            <solid android:color="@color/dark_black"/>
            <corners android:radius="15.0dip"/>
            <size android:height="22.0dip" android:width="22.0dip"/>
            <stroke android:width="6.0dip" android:color="@color/dark_blue"/>
        </shape>
    </item>
    <item android:state_checked="false">
        <shape android:dither="true" android:visible="true" android:shape="rectangle" android:useLevel="false">
            <solid android:color="@color/dark_black_blue"/>
            <corners android:radius="15.0dip"/>
            <size android:height="22.0dip" android:width="22.0dip"/>
            <stroke android:width="6.0dip" android:color="@color/dark_grey"/>
        </shape>
    </item>
</selector>